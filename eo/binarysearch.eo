+package sandbox
+alias stdout org.eolang.io.stdout
+alias sprintf org.eolang.txt.sprintf

[l r x args...] > binarysearch
  memory > mid
  ((l.less r).or (l.eq r)).if > @
    mid.write (l.add ((r.sub l).div 2))
      ((args.get mid).eq x).if
        mid
          (x.less (args.get mid)).if
            binarySearch l (mid.sub 1) x args
            binarySearch (mid.add 1) r x args
    -1